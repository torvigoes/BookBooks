@using BookBooks.Models

@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listagem de usuários";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Criar">+</a>
    </div>
    <br/>

    @if (TempData["MsgSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MsgSucesso"]
        </div>
    }

    @if (TempData["MsgErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MsgErro"]
        </div>
    }

    <br/>

    <h1 class="display-4">@ViewData["Title"]</h1>

    <table class="table" id="table-usuarios">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Perfil</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col">Data de Cadastro</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
            foreach(UsuarioModel usuario in Model)
                {
                    <tr>
                        <th scope="row">@usuario.Id</th>
                        <td>@usuario.Perfil</td>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.DataCadastro</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a role="button" class="btn btn-primary"
                                   asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Edit">Editar</a>

                                <button role="button" class="btn btn-danger open-delete-modal"
                                        asp-route-id="@usuario.Id" data-url="@Url.Action("OpenDeleteModelPartial", new { id = usuario.Id })">Excluir</button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhum usuário encontrado</td></tr>
            }
        </tbody>
    </table>
</div>

<div id="modal-placeholder"></div>
