@using BookBooks.Models

@model List<LivroModel>
@{
    ViewData["Title"] = "Listagem de livros";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Livro" asp-action="AdicionarLivro">+</a>
    </div>
    <br/>

    @if (TempData["MsgSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MsgSucesso"]
        </div>
    }

    @if (TempData["MsgErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MsgErro"]
        </div>
    }

    <br/>

    <h1 class="display-4">@ViewData["Title"]</h1>

    <table class="table" id="table-livros">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Título</th>
                <th scope="col">Autor</th>
                <th scope="col">Ano</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            foreach(LivroModel livro in Model)
                {
                    <tr>
                        <th scope="row">@livro.Id</th>
                        <td>@livro.Titulo</td>
                        <td>@livro.Autor</td>
                        <td>@livro.AnoPublicacao</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a role="button" class="btn btn-primary" 
                                asp-route-id="@livro.Id" asp-controller="Livro" asp-action="EditarLivro">Editar</a>

                                <button role="button" class="btn btn-danger open-delete-modal" 
                                        asp-route-id="@livro.Id" data-url="@Url.Action("OpenDeleteModelPartial", new { id = livro.Id })">Excluir</button>
                            </div>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>

<div id="modal-placeholder"></div>
